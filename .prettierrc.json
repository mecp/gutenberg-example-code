{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "printWidth": 120
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    }
  ]
}
