{
  "compilerOptions": {
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2015", "es2015.promise", "es2016", "es2017", "esnext"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "./typings"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "types": [
    "node",
    "graceful-fs",
    "lodash",
    "sequelize",
    "mocha",
    "chai"         
  ],
  "exclude": [
    "test",
    "coverage",
    "node_modules",
    "!node_modules/@types"
  ]
}
